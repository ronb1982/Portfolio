@model MVCPortfolio.Models.FakeDatabase.Book

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <h2>Edit Book Details</h2>
        @using (Html.BeginForm("Edit", "Books", FormMethod.Post, new { role = "form" }))
        {
            @Html.ValidationSummary()
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                @Html.LabelFor(m=>m.Title)
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Enter title" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m=>m.Author)
                @Html.TextBoxFor(m => m.Author, new { @class = "form-control", placeholder = "Enter author" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m=>m.YearPublished)
                @Html.TextBoxFor(m => m.YearPublished, new { @class = "form-control", placeholder = "Enter author" })
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        }
    </div>
</div>
